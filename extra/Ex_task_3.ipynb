        "count, new_filename = replace_in_file(filename, 'я', 'я не')\n",
        "\n",
        "with open(new_filename, 'r') as f:\n",
        "    print('После замены:\\n' + f.read())\n",
        "\n",
        "print('Количество замен:', count)\n"
