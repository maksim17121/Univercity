        "def merge_files(file_list, output_file):\n",
        "    with open(output_file, 'w') as out:\n",
        "        for index, file in enumerate(file_list):\n",
        "            with open(file, 'r') as f:\n",
        "                content = f.read()\n",
        "                out.write(content)\n",
        "                if index != len(file_list) - 1:\n",
        "                    out.write('\\n~~~разделитель~~~\\n')\n",
        "\n",
        "file_list = ['example.txt', 'modified_example.txt', 'output.txt']\n",
        "for file in file_list:\n",
        "    with open(file, 'r') as f:\n",
        "        print(f'Содержимое {file}:\\n{f.read()}')\n",
        "\n",
        "merge_files(file_list, 'merged_output.txt')\n",
        "\n",
        "with open('merged_output.txt', 'r') as f:\n",
        "    print('Содержимое объединённого файла:\\n' + f.read())\n"
