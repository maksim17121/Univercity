      "source": [
        "\n",
        "def get_list_element(my_list, index):\n",
        "  try:\n",
        "    print(\"Элемент:\", my_list[index])\n",
        "  except IndexError:\n",
        "    print(\"Индекс вне диапозона\")\n",
        "  finally:\n",
        "    print(\"Попытка доступа завершена\")\n",
        "\n",
        "my_list = [1, 2, 3, 4, 5]\n",
        "get_list_element(my_list, 2)\n",
        "get_list_element(my_list, 10)"
      ]
